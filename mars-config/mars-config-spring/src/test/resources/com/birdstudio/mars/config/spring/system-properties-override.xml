<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mars="http://code.birdstudiotech.com/schema/mars"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://code.birdstudiotech.com/schema/mars http://code.birdstudiotech.com/schema/mars/mars.xsd
    ">

    <!-- 当前应用信息配置 -->
    <mars:application name="demo-provider" />
    
    <!-- 连接注册中心配置 -->
    <mars:registry address="127.0.0.1" />
     
    <!-- 暴露服务协议配置 -->
    <mars:protocol name="rmi" port="20813" />
    
    <!-- 暴露服务配置 -->
    <mars:service id="demoServiceConfig" register="true" interface="com.birdstudio.mars.config.spring.api.DemoService" ref="demoService" />

    <bean id="demoService" class="com.birdstudio.mars.config.spring.impl.DemoServiceImpl" />
 
</beans>
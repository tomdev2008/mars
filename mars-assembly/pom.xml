	  </dependency>	
  	  <dependency>
		<groupId>com.birdstudio.mars.network</groupId>
		<artifactId>mars-network-zookeeper</artifactId>
		<version>${mars-version}</version>
	  </dependency>		  
  	  <dependency>
		<groupId>com.birdstudio.mars.registry</groupId>
		<artifactId>mars-registry-api</artifactId>
		<version>${mars-version}</version>
	  </dependency>	
  	  <dependency>
		<groupId>com.birdstudio.mars.registry</groupId>
		<artifactId>mars-registry-zookeeper</artifactId>
		<version>${mars-version}</version>
	  </dependency>	
  	  <dependency>
		<groupId>com.birdstudio.mars.cluster</groupId>
		<artifactId>mars-cluster</artifactId>
		<version>${mars-version}</version>
	  </dependency>	
  	  <dependency>
		<groupId>com.birdstudio.mars.config</groupId>
		<artifactId>mars-config-api</artifactId>
		<version>${mars-version}</version>
	  </dependency>	
  	  <dependency>

	  </dependency>	
	  <dependency>
	    <groupId>com.birdstudio.mars.remoting</groupId>
		<artifactId>mars-remoting-cxf</artifactId>
		<version>${mars-version}</version>		
	  </dependency>		  
	  <dependency>
	    <groupId>com.birdstudio.mars.remoting</groupId>
		<artifactId>mars-remoting-mars</artifactId>
		<version>${mars-version}</version>		
	  </dependency>		
	  <dependency>
	    <groupId>com.birdstudio.mars.remoting</groupId>
		<artifactId>mars-remoting-hessian</artifactId>
		<version>${mars-version}</version>		
	  </dependency>	  
	  <dependency>
	    <groupId>com.birdstudio.mars.remoting</groupId>
		<artifactId>mars-remoting-injvm</artifactId>
		<version>${mars-version}</version>		
	  </dependency>		  
  	  <dependency>
		<groupId>com.birdstudio.mars.network</groupId>
		<artifactId>mars-network-api</artifactId>
		<version>${mars-version}</version>
	  </dependency>	
  	  <dependency>

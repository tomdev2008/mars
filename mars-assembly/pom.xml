		<artifactId>mars-monitor-api</artifactId>
		<version>${mars-version}</version>
	  </dependency>		
	  <dependency>
		<groupId>com.birdstudio.mars.container</groupId>
		<artifactId>mars-container-api</artifactId>
		<version>${mars-version}</version>
	  </dependency>	
	  <dependency>
		<groupId>com.birdstudio.mars.container</groupId>
		<artifactId>mars-container-spring</artifactId>
		<version>${mars-version}</version>
	  </dependency>		  	  
  </dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<createSourcesJar>true</createSourcesJar>
							<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
							<artifactSet>
								<includes>
									<include>com.birdstudio.mars.remoting:mars-remoting-api</include>
									<include>com.birdstudio.mars.remoting:mars-remoting-cxf</include>
									<include>com.birdstudio.mars.remoting:mars-remoting-mars</include>
									<include>com.birdstudio.mars.remoting:mars-remoting-hessian</include>
									<include>com.birdstudio.mars.remoting:mars-remoting-injvm</include>
									<include>com.birdstudio.mars.network:mars-network-api</include>
									<include>com.birdstudio.mars.network:mars-network-http</include>
									<include>com.birdstudio.mars.network:mars-network-netty</include>
									<include>com.birdstudio.mars.network:mars-network-zookeeper</include>
									<include>com.birdstudio.mars.cluster:mars-cluster</include>
									<include>com.birdstudio.mars.registry:mars-registry-api</include>
									<include>com.birdstudio.mars.registry:mars-registry-zookeeper</include>
									<include>com.birdstudio.mars.monitor:mars-monitor-api</include>
									<include>com.birdstudio.mars.config:mars-config-api</include>
									<include>com.birdstudio.mars.config:mars-config-spring</include>
									<include>com.birdstudio.mars.container:mars-container-api</include>
									<include>com.birdstudio.mars.container:mars-container-spring</include>
								</includes>
							</artifactSet>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.eirene.utils.compiler.Compiler</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.eirene.utils.extension.ExtensionFactory</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.eirene.utils.serialize.Serialization</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.eirene.utils.status.StatusChecker</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.eirene.utils.threadpool.ThreadPool</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.network.Dispatcher</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.network.Codec2</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.network.Transporter</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.network.exchange.Exchanger</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.network.http.HttpBinder</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.network.p2p.Networker</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.network.telnet.TelnetHandler</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.network.zookeeper.ZookeeperTransporter</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.remoting.Protocol</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.remoting.Filter</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.remoting.InvokerListener</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.remoting.ExporterListener</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.remoting.ProxyFactory</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.remoting.cluster.Cluster</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.remoting.cluster.LoadBalance</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.remoting.cluster.Merger</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/mars/internal/com.birdstudio.mars.remoting.cluster.RouterFactory</resource>
								</transformer>
